{% extends "AdminBundle::base.html.twig" %}
{% form_theme Form 'AdminBundle:Form:form_template.html.twig' %}

{% set formTitle = RankObject.id is null ? 'Dodawanie nowego obiektu' : 'Edycja obiektu "%s"'|format(RankObject.title) %}

{% block pageTitle %} Formularz obiektu {% endblock %}

{% block pageDescription %} Formularz obiektu serwisu Rankingowiec.pl {% endblock %}

{% block pageContent %}

    <!-- content container -->
    <div class="container">
        {{ form_start(Form) }}
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{ formTitle }}
                        </div>
                        <div class="panel-body">
                            {{ form_row(Form.title) }}
                            {{ form_row(Form.slug) }}
                            {{ form_row(Form.more_link) }}
                            {{ form_row(Form.description) }}

                        </div>
                    </div>
                </div> <!-- .col-md-8 -->

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Akcje
                                </div>
                                <div class="panel-body">
                                    {{ form_row(Form.save) }}
                                </div>
                            </div>
                        </div> <!-- .col-md-12 -->

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Miniaturka
                                </div>
                                <div class="panel-body">
                                    {% if RankObject.thumbnail is null %}
                                        <p>Brak miniaturki</p>
                                    {% else %}
                                        <p><img src="{{ vich_uploader_asset(RankObject, 'thumbnailFile') }}" alt="" class="img-thumbnail"></p>
                                    {% endif %}

                                    {{ form_widget(Form.thumbnailFile) }}
                                    {{ form_errors(Form.thumbnailFile) }}
                                </div>
                            </div>
                        </div> <!-- .col-md-12 -->

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Właściwości
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <div>
                                                {{ form_row(Form.publishedDate, {'label_length': 5, 'wrapper_length': 7}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <!--<div class="form-group">-->
                                    <!--<label class="col-lg-5">Home Page</label>-->
                                    <!--<div class="col-lg-7">-->
                                    <!--<div>-->
                                    <!--<input type="checkbox" id="date" name="date" class="form-control">-->
                                    <!--</div>-->
                                    <!--</div>-->
                                    <!--</div>-->
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Taksonomie
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        {#<label for="category" class="col-lg-3 control-label">Kategoria:</label>#}
                                        {#<div class="col-lg-9">#}
                                            {#<select id="category" class="select-block" placeholder="Kategoria">#}
                                                {#<option>Development</option>#}
                                                {#<option>Front-end</option>#}
                                                {#<option>Back-end</option>#}
                                                {#<option>Mobile</option>#}
                                                {#<option>Design</option>#}
                                            {#</select>#}
                                        {#</div>#}
                                        {{ form_row(Form.category, {'label_length': 3, 'wrapper_length': 9, 'attr': {'class': 'select-block'}}) }}
                                    </div>

                                    <!--<div class="form-group">-->
                                    <!--<label for="tags" class="col-lg-3 control-label">Tagi:</label>-->
                                    <!--<div class="col-lg-9">-->
                                    <!--<select id="tags" class="select-block" placeholder="Tagi" multiple>-->
                                    <!--<option>iOS</option>-->
                                    <!--<option>Android</option>-->
                                    <!--<option>Windows8</option>-->
                                    <!--<option>Bada</option>-->
                                    <!--<option>Samsung</option>-->
                                    <!--</select>-->
                                    <!--</div>-->
                                    <!--</div>-->
                                </div>
                            </div>
                        </div> <!-- .col-md-12 -->

                    </div>
                </div>  <!-- .col-md-4 -->
            </div> <!-- .row -->
        {#</form>#}
        {{ form_end(Form) }}
    </div> <!-- .container -->
    <!-- /content container -->

{% endblock %}