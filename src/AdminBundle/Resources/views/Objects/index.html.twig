{% extends "AdminBundle::base.html.twig" %}

{% block pageTitle %} Lista obiektów {% endblock %}

{% block pageDescription %} Lista obiektów serwisu Rankingowiec.pl {% endblock %}

{% block pageContent %}

    <!-- content container -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Wyszukiwanie i filtracja
                    </div>
                    <div class="panel-body">
                        <form action="#" method="get" class="form-inline filter-search" role="form">
                            <div class="form-group">
                                <input type="text" name="title" class="form-control" placeholder="Wyszukaj po nazwie">
                            </div>

                            <div class="form-group">
                                <select name="category" class="select-block" placeholder="Kategoria">
                                    <option></option>
                                    <option value="dev">Development</option>
                                    <option value="des">Design</option>
                                    <option value="tech">Technologie</option>
                                    <option value="mob">Mobilne</option>
                                    <option value="games">Gry</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Filtruj</button>
                            </div>

                            <div class="form-group pull-right limit">
                                <label for="limit" class="col-lg-5 control-label">Wyników</label>
                                <div class="col-lg-7">
                                    <select name="limit" class="select-block" id="limit" placeholder="Pokaż">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Obiekty
                    </div>
                    <div class="panel-body">

                        <ul class="nav nav-pills pull-left">
                            <li class="active"><a href="#">Wszystkie (123)</a></li>
                            <li><a href="#">Opublikowane (100)</a></li>
                            <li><a href="#">Nieopublikowane (23)</a></li>
                        </ul>

                        <ul class="nav nav-pills pull-right">
                            <li><a href="{{ path('admin_objectForm') }}">Dodaj nowy</a></li>
                        </ul>

                        <div class="clearfix"></div>

                        <div style="margin-top: 20px;" class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th><a class="sortable" href="#">ID</a></th>
                                        <th><a class="sortable" href="#">Nazwa</a></th>
                                        <th><a class="sortable sort-desc" href="#">Kategoria</a></th>
                                        <th><a class="sortable" href="#">Autor</a></th>
                                        <th><a class="sortable" href="#">Data utworzenia</a></th>
                                        <th><a class="sortable" href="#">Data publikacji</a></th>
                                        <th>Akcje</th>
                                    </tr>
                                </thead>

                                <tbody>

                                {% for object in Pagination %}
                                    <tr>
                                        <td>{{ object.id }}</td>
                                        <td><a href="{{ path('admin_objectForm', {'id': object.id }) }}">{{ object.title }}</a></td>
                                        <td>
                                            {% for category in object.category %}
                                                <span class="label label-info">{{ category.name }}</span>
                                            {% else %}
                                                Brak Kategori
                                            {% endfor %}
                                        </td>
                                        <td>{{ object.author }}</td>
                                        <td>{{ object.createDate|adminFormatDate }}</td>
                                        <td>
                                            {% if object.publishedDate is null %}
                                                nie zaplanowano publikacji
                                            {% else %}
                                                {{ object.publishedDate|adminFormatDate }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('admin_objectForm', {'id': object.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                                <a href="#" class="btn btn-danger" data-confirmAction=""><span class="glyphicon glyphicon-trash"></span></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                        {{ knp_pagination_render(Pagination, 'AdminBundle:Pagination:admin_pagination.html.twig') }}

                        {#<ul class="pagination pull-right">#}
                            {#<li><a href="#">&laquo;</a></li>#}
                            {#<li class="active"><a href="#">1</a></li>#}
                            {#<li><a href="#">2</a></li>#}
                            {#<li><a href="#">3</a></li>#}
                            {#<li><a href="#">4</a></li>#}
                            {#<li><a href="#">5</a></li>#}
                            {#<li><a href="#">&raquo;</a></li>#}
                        {#</ul>#}
                    </div> <!-- .panel-body -->
                </div> <!-- .panel -->
            </div> <!-- .col-md-12 -->
        </div> <!-- .row -->
    </div> <!-- .container -->
    <!-- /content container -->

{% endblock %}