{% extends "AdminBundle::base.html.twig" %}

{% block pageTitle %} Formularz obiektu {% endblock %}

{% block pageDescription %} Formularz obiektu serwisu Rankingowiec.pl {% endblock %}

{% block pageContent %}

    <!-- content container -->
    <div class="container">
        <form action="#" method="post" class="form-horizontal" role="form">
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Dodawanie nowej strony / Edycja strony "Lorem ipsum dolor sit amet."
                        </div>
                        <div class="panel-body">
                            <div class="form-group has-error">
                                <label for="title" class="col-lg-1 control-label">Tytuł</label>
                                <div class="col-lg-11">
                                    <input type="text" class="form-control" id="title" placeholder="Nazwa">
                                    <p class="help-block">Uzupełnij to pole.</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="alias" class="col-lg-1 control-label">Alias:</label>
                                <div class="col-lg-11">
                                    <input type="text" class="form-control" id="alias" placeholder="Alias">
                                </div>
                            </div>
                            <div class="form-group  has-error">
                                <label for="content" class="col-lg-1 control-label">Content</label>
                                <div class="col-lg-11">
                                    <textarea class="form-control summernote" name="content" id="content" placeholder="Zawartość strony"></textarea>
                                    <p class="help-block">Uzupełnij to pole.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- .col-md-8 -->

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Akcje
                                </div>
                                <div class="panel-body">
                                    <button class="btn btn-success">Zapisz</button>
                                </div>
                            </div>
                        </div> <!-- .col-md-12 -->

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Obrazek
                                </div>
                                <div class="panel-body">
                                    <!-- <p><img src="..." alt="..." class="img-thumbnail"></p> -->
                                    <p>Brak obrazka</p>
                                    <input type="file" name="thumbnail">
                                </div>
                            </div>
                        </div> <!-- .col-md-12 -->

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Właściwości
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="col-lg-5 required">Data publikacji</label>
                                        <div class="col-lg-7">
                                            <div>
                                                <input type="date" id="date2" name="date2" class="form-control">
                                                <input type="time" id="time" name="time" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>  <!-- .col-md-4 -->
            </div> <!-- .row -->
        </form>
    </div> <!-- .container -->
    <!-- /content container -->

{% endblock %}