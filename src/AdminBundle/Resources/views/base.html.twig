                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="{{ path('ranking_index') }}">Rankingowiec</a>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">

            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('admin_dashboard') }}">Kokpit</a></li>
                <li><a href="{{ path('fos_user_profile_show') }}">Moje konto</a></li>
                <li><a href="{{ path('admin_rankings') }}">Rankingi</a></li>
                <li><a href="{{ path('admin_objects') }}">Obiekty</a></li>
                <li><a href="{{ path('admin_pages') }}">Strony</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Taksonomie <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('admin_categories') }}">Kategorie</a></li>
                        <li><a href="{{ path('admin_tags') }}">Tagi</a></li>
                    </ul>
                </li>
                <li><a href="{{ path('admin_users') }}">Użytkownicy</a></li>
                {#<li><a href="#">Komentarze</a></li>#}
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('fos_user_profile_show') }}">Robert Saternus</a></li>
                <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span></a></li>
            </ul>
        </div>
    </nav>
</header>

<section class="alerts">

    <!-- alerts container -->
    {% if app.session.flashBag.has('success') or app.session.flashBag.has('error') %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    {#
                    {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>Sukces!</strong> {{ app.session.flashBag.get('success')[0] }}
                    </div>
                    {% endif %}

                    {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>Błąd!</strong> {{ app.session.flashBag.get('error')[0] }}
                    </div>
                    {% endif %}
                    #}

                    {% for success in app.session.flashBag.get('success') %}
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <strong>Sukces!</strong> {{ success }}
                        </div>
                    {% endfor %}

                    {% for error in app.session.flashBag.get('error') %}
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <strong>Błąd!</strong> {{ error }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

</section>


<main>
    {% block pageContent %}{% endblock %}
</main>


{% block scripts %}

    {% javascripts
    'assets/js/jquery-2.1.3.min.js'
    'assets/js/bootstrap.min.js'
    'assets/js/select2.min.js'
    'assets/js/script-admin.js'
    output = 'js/admin_compiled.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

