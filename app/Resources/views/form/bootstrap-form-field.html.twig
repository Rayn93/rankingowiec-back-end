{% block form_row %}
    {% spaceless %}
        <div class="form-group">
            {{ form_errors(form) }}
            {{ form_label(form, null, {'label_attr': {'class': 'col-xs-3 control-label'} }) }}
            <div class="col-xs-6">
                {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}